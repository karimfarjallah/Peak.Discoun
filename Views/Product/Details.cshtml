@model Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var photoPath = "~/images/" + (Model.ImagePath ?? "noimage.jpg");}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" style="height: 160px; width: auto;" src="@photoPath" asp-append-version="true" />

                <h4>Description : @Model.Description</h4>
                <h4>Stock : @Model.Stock</h4>
                <h4>Price : @Model.Price</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>

